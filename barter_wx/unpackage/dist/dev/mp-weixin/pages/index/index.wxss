.home swiper {
  width: 750rpx;
  height: 400rpx;
}
.home swiper image {
  width: 100%;
  height: 100%;
}
.home .nav {
  display: flex;
}
.home .nav .nav_item {
  width: 25%;
  text-align: center;
}
.home .nav .nav_item view {
  width: 120rpx;
  height: 120rpx;
  background: #d81e06;
  border-radius: 60rpx;
  margin: 10px auto;
  line-height: 120rpx;
  color: #ff;
  font-size: 50rpx;
}
.home .nav .nav_item text {
  font-size: 30rpx;
}
.home .hot_goods {
  background: #eee;
  overflow: hidden;
  margin-top: 10px;
}
.home .hot_goods .title {
  height: 50px;
  line-height: 50px;
  color: #d81e06;
  text-align: center;
  letter-spacing: 20px;
  background: #fff;
  margin: 7rpx 0;
}
.home .isOver {
  font-size: 28rpx;
  text-align: center;
}

